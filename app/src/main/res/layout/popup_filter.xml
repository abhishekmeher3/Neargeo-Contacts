<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:paddingLeft="16dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filters"
                android:fontFamily="@font/century_gothic"
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appliedText"
                android:fontFamily="@font/century_gothic"
                android:layout_marginLeft="4dp"
                android:text="(1 Applied)"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorPrimary"
            android:textStyle="normal"
            android:fontFamily="@font/century_gothic"
            android:textAllCaps="false"
            style="@style/Widget.AppCompat.Button.Borderless"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/header"
        android:background="@color/divider_color"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:theme="@style/checkBoxStyle"
        android:id="@+id/all_contacts"
        android:layout_below="@id/header"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/header"
        android:fontFamily="@font/century_gothic"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/all_contacts"
        android:text="All Contacts"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:theme="@style/checkBoxStyle"
        android:layout_below="@+id/all_contacts"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:id="@+id/near_by"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:layout_below="@+id/all_contacts"
        android:layout_toRightOf="@+id/all_contacts"
        android:fontFamily="@font/century_gothic"
        android:text="Nearby Me"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:theme="@style/checkBoxStyle"
        android:layout_below="@+id/near_by"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:id="@+id/first_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:layout_below="@+id/near_by"
        android:fontFamily="@font/century_gothic"
        android:layout_toRightOf="@+id/all_contacts"
        android:text="First Name"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:theme="@style/checkBoxStyle"
        android:layout_below="@+id/first_name"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:id="@+id/last_name"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/century_gothic"
        android:layout_below="@+id/first_name"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/all_contacts"
        android:text="Last Name"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:theme="@style/checkBoxStyle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/last_name"
        android:id="@+id/company_dept"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/last_name"
        android:fontFamily="@font/century_gothic"
        android:layout_toRightOf="@+id/all_contacts"
        android:textColor="@color/black"
        android:text="Company - Department -Designation  First Name"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:theme="@style/checkBoxStyle"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/company_dept"
        android:id="@+id/company_dept_last"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/century_gothic"
        android:layout_below="@+id/company_dept"
        android:layout_toRightOf="@+id/all_contacts"
        android:text="Company - Department - Designation  Last Name"/>

</RelativeLayout>