<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ContactDetailsActivity">

        <RelativeLayout
            android:id="@+id/header_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />

            <ImageView
                android:id="@+id/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                app:srcCompat="@mipmap/more" />




            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@mipmap/ic_launcher_round" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_image"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="Adam N Mathew"
                android:textColor="#3a3b3c"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/contact_tech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:text="Professor"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/user_locations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contact_tech"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:text="Osmania University, Hyderabad"
                android:textSize="12.5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_locations"
                android:layout_marginBottom="8dp"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:padding="10dp"
                        android:src="@mipmap/call" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/call"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/verdana"
                        android:paddingTop="15dp"
                        android:text="Call"
                        android:textColor="#676767"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:padding="10dp"
                        android:src="@mipmap/message" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/message"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/verdana"
                        android:paddingTop="15dp"
                        android:text="Message"
                        android:textColor="#676767"
                        android:textSize="15sp" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/un_favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:padding="10dp"
                        android:src="@mipmap/fav" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/un_favourite"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/verdana"
                        android:paddingTop="16dp"
                        android:text="favourite"
                        android:textColor="#676767"
                        android:textSize="15sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="5dp"
                        android:padding="10dp"
                        android:src="@mipmap/directions" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/distance"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/verdana"
                        android:paddingTop="15dp"
                        android:text="0.5kms"
                        android:textColor="#676767"
                        android:textSize="15sp" />
                </RelativeLayout>


            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header_menu"
            android:background="#f7f7f7"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_background">

                <ImageView
                    android:id="@+id/group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:src="@mipmap/group" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/group"
                    android:singleLine="true"
                    android:text="Music Group, School Friends"
                    android:textColor="#3a3b3c" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contact_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_background"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/invisible_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/call_black" />

                <TextView
                    android:id="@+id/ph_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/invisible_icon"
                    android:text="+1-202-555-014"
                    android:textColor="#3a3b3c" />

                <TextView
                    android:id="@+id/home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ph_number"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/invisible_icon"
                    android:text="Home"
                    android:textColor="#3a3b3c" />


                <ImageView
                    android:id="@+id/chatting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/message_black" />

                <View
                    android:id="@+id/separator_three"
                    android:layout_width="1dip"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/chatting"
                    android:background="#8a8a8a" />

                <View
                    android:id="@+id/separator"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/home_text"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#8a8a8a" />

                <TextView
                    android:id="@+id/ph_personal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/separator"
                    android:layout_toRightOf="@+id/invisible_icon"
                    android:text="+91 98542-54831"
                    android:textColor="#3a3b3c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ph_personal"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/invisible_icon"
                    android:text="Personal"
                    android:textColor="#3a3b3c" />

                <ImageView
                    android:id="@+id/chatting_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/separator"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="11dp"
                    android:padding="10dp"
                    android:src="@mipmap/message_black" />

                <View
                    android:id="@+id/separator_two"
                    android:layout_width="1dip"
                    android:layout_height="30dp"
                    android:layout_below="@+id/home_text"
                    android:layout_marginTop="22dp"
                    android:layout_toLeftOf="@+id/chatting_two"
                    android:background="#8a8a8a" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/call_history_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/call_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/call_history_icon"
                    android:text="Call History"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/day_of_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/call_history_icon"
                    android:layout_marginLeft="24dp"
                    android:text="Yesterday" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/day_of_call"
                    android:layout_marginTop="10dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/day_of_call"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="1"
                        android:text="1:56 PM" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/day_of_call"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Incoming Call" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/day_of_call"
                        android:layout_marginRight="25dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="10 hr 1m 3s" />
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_background"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/call_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/email" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/call_email"
                    android:text="adam.n.mathew@gmail.com" />

                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:src="@mipmap/mail_icon" />

                <View
                    android:id="@+id/email_two"
                    android:layout_width="1dip"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@+id/email_icon"
                    android:background="#8a8a8a" />

                <View
                    android:id="@+id/line_separator"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/email"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="18dp"
                    android:background="#8a8a8a" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_background">

                <ImageView
                    android:id="@+id/directions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:src="@mipmap/directions_black" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/directions"
                    android:singleLine="true"
                    android:text="Valley Hill, Hyderabad"
                    android:textColor="#3a3b3c" />

                <TextView
                    android:id="@+id/distance_cal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/directions"
                    android:text="0.5kms" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rember_date"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/grey_border_background"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/party_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/anniversary" />

                <TextView
                    android:id="@+id/party_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/party_icon"
                    android:text="Weding Anniversary"
                    android:textColor="#3a3b3c" />

                <TextView
                    android:id="@+id/party_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/party_text"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/party_icon"
                    android:text="05 Jan 1991"
                    android:textColor="#3a3b3c" />


                <ImageView
                    android:id="@+id/add_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/add_to_calendar" />

                <View
                    android:id="@+id/separator_party"
                    android:layout_width="1dip"
                    android:layout_height="30dp"
                    android:layout_marginTop="12dp"
                    android:layout_toLeftOf="@+id/add_date"
                    android:background="#8a8a8a" />

                <View
                    android:id="@+id/party_divider"
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/party_date"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="#8a8a8a" />


                <ImageView
                    android:id="@+id/birthday_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/party_date"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:src="@mipmap/birthday" />

                <TextView
                    android:id="@+id/birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/party_divider"
                    android:layout_toRightOf="@+id/birthday_icon"
                    android:text="+91 98542-54831"
                    android:textColor="#3a3b3c" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/birthday"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/birthday_icon"
                    android:text="Personal"
                    android:textColor="#3a3b3c" />

                <ImageView
                    android:id="@+id/add_date_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/party_divider"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="11dp"
                    android:padding="10dp"
                    android:src="@mipmap/add_to_calendar" />

                <View
                    android:id="@+id/party_divider_three"
                    android:layout_width="1dip"
                    android:layout_height="30dp"
                    android:layout_below="@+id/party_divider"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/add_date_two"
                    android:background="#8a8a8a" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>
</ScrollView>