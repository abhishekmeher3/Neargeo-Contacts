<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg">

    <ImageView
        android:id="@+id/logo_one"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/scan"/>

    <TextView
        android:id="@+id/print_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:textSize="19dp"
        android:layout_below="@+id/logo_one"
        android:layout_centerHorizontal="true"
        android:textColor="#2c3c56"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If design is about solving problems, itâ€™s the product designer who steers the ship toward finding the best solution for customers."
        android:textAlignment="center"
        android:layout_below="@+id/print_text"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#2c3c56"
        android:textStyle="bold"/>

</RelativeLayout>