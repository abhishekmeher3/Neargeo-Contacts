<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#8a8a8a</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">#676767</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/century_gothic</item>
        <!--<item name="colorControlNormal">@android:color/white</item>-->
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FF202230</item>
        <item name="android:fontFamily">@font/century_gothic</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/colorPrimary</item>


    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/text_colour</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/text_colour</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>
    <style name="popupMenuStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/text_colour</item>
        <item name="android:itemBackground">@color/white</item>
    </style>
    <style name="CheckBoxTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/text_colour</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
